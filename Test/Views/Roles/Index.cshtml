@model IEnumerable<Test.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản trị quyền</h1>

<p>
    <a asp-action="Create">Thêm quyền</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.RoleId">Thông tin</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
